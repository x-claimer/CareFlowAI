# Database Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=careflowai

# JWT Authentication Configuration (NOT AWS)
# This key is used for signing JWT tokens for user authentication
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# AWS Credentials (for AWS deployment)
# Get these from AWS IAM Console: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# Google Gemini AI API Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# AI Model Selection
# Available models: gemini-2.5-flash, gemini-1.5-flash, gemini-1.5-pro, gemini-2.0-flash-exp
# For Health Report Analysis (handles images/PDFs, needs multimodal capabilities)
GEMINI_REPORT_ANALYSIS_MODEL=gemini-2.5-flash

# For Medical Tutor (text-based explanations)
GEMINI_TUTOR_MODEL=gemini-2.5-flash
