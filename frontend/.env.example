###############################################################################################
# CareFlowAI Frontend Environment Variables
###############################################################################################
VITE_API_URL=http://localhost:8000

###############################################################################################
# CareFlowAI Backend Environment Variables
# Copy this file to 'CareFlowAI/backend/.env' and update the values as needed
###############################################################################################
# Database Configuration
# MONGODB_URL=mongodb://localhost:27017
# Note: Password special characters must be URL-encoded: @ = %40, # = %23, etc.
MONGODB_URL=mongodb+srv://<username>:<password>@<cluster-url>/<database-name>?appName=<app-name>
DATABASE_NAME=careflowai

# JWT Authentication Configuration (NOT AWS)
# This key is used for signing JWT tokens for user authentication
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=<your-jwt-secret-key-here>
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# AWS Credentials (for AWS deployment)
# Get these from AWS IAM Console: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=<your-aws-access-key-id>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-access-key>
AWS_REGION=us-east-1

# Google Gemini AI API Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=<your-gemini-api-key>

# AI Model Selection
# Available models: gemini-2.5-flash, gemini-1.5-flash, gemini-1.5-pro, gemini-2.0-flash-exp
# For Health Report Analysis (handles images/PDFs, needs multimodal capabilities)
GEMINI_REPORT_ANALYSIS_MODEL=gemini-2.5-flash

# For Medical Tutor (text-based explanations)
GEMINI_TUTOR_MODEL=gemini-2.5-flash

###############################################################################################
# AWS Deployment Configuration
# These variables are used by the deployment scripts in aws/scripts/
###############################################################################################

# CloudFormation Stack Configuration
STACK_NAME_PREFIX=CareFlowAI
REGION=us-east-1

# EC2 Configuration
KEY_NAME=<your-key-pair-name>
INSTANCE_TYPE=t2.micro
SSH_KEY_PATH=<path-to-your-ssh-key>

# Auto Scaling Group Configuration
ENVIRONMENT_NAME=CareFlowAI
ASG_NAME=CareFlowAI-Backend-ASG
MIN_SIZE=1
MAX_SIZE=3
DESIRED_CAPACITY=1

# AWS Profile
AWS_PROFILE=default

# Frontend Deployment Configuration
S3_BUCKET=<your-s3-bucket-name>
CLOUDFRONT_DISTRIBUTION_ID=<your-cloudfront-distribution-id>
API_URL=<your-api-url>

# VPC Configuration
VPC_NAME=careflowai-vpc
LOAD_BALANCER_NAME=careflowai-alb

# API Gateway Configuration
DEPLOY_API_GATEWAY=yes

# CloudWatch Monitoring
DEPLOY_CLOUDWATCH_MONITORING=yes
ALARM_EMAIL=<your-email@example.com>

# IAM Configuration
IAM_ROLE_PREFIX=careflowai

# ECR Configuration (for container deployments)
ECR_REPOSITORY_FRONTEND=careflowai-frontend
ECR_REPOSITORY_BACKEND=careflowai-backend

# MongoDB Cluster (for DocumentDB or Atlas)
MONGODB_CLUSTER_NAME=careflowai-mongodb
